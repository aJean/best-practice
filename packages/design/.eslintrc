{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "plugin:react/recommended",
        "prettier",
        "prettier/react"
    ],
    "plugins": [
        "react",
        "prettier"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "semi": true,
                "singleQuote": true,
                "trailingComma": "none",
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "bracketSpacing": true,
                "jsxBracketSameLine": true
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120,
                "tabWidth": 4,
                "ignoreComments": true,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-unused-expressions": 0,
        "no-confusing-arrow": "error",
        "no-console": 0,
        "newline-per-chained-call": 1,
        "arrow-parens": 0,
        "no-duplicate-imports": 0,
        "react/jsx-filename-extension": 0,
        "react/sort-comp": 0,
        "global-require": 0,
        "comma-dangle": [2, "never"],
        "no-underscore-dangle": 0,
        "import/prefer-default-export": 0,
        "quote-props": 1,
        "no-await-in-loop": 1,
        "space-before-function-paren": [
            "error", {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "indent": ["error", 4, {
                "SwitchCase": 1,
                "flatTernaryExpressions": false
            }],
        "semi": [2, "always"],
        "semi-spacing": [0, {
            "before": false,
            "after": true
        }],
        "jsx-a11y/no-noninteractive-element-interactions": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "jsx-a11y/href-no-hash": 0,
        "flowtype/no-types-missing-file-annotation": 0,
        "react/no-array-index-key": 0,
        "react/no-danger": 0,
        "react/prop-types": 0
    }
}